@import 'colors'

.info-header
    position relative
    width 100%
    height 350px
    -webkit-transition height ease .5s
    transition height ease .5s

.ih-background
    position absolute
    background url('../images/food.jpg')
    background-size cover
    background-position center
    width 100%
    height 100%

.ih-info-container
    position relative
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    color #fff

.ih-consumed
    font-family Montserrat
    font-size 45px
    margin-right 10px
    text-shadow 0 0 5px #000
    text-align center

.ih-calories-wrapper
    margin -90px 0 0 10px

@media (min-width: 590px)
    .ih-calories-wrapper
        margin -140px 0 0 10px

@media (min-width: 980px)
    .ih-calories-wrapper
        margin 10px 0 0 10px

.ih-calories
    font-family Montserrat
    color accent-hue-2
    span:first-child
        font-size 90px
        text-shadow 0 0 2px #000

.ih-calories
    span:last-child
        font-size 35px
        text-shadow 0 0 2px #000

.ih-calories-message
    position relative
    bottom 10px
    text-shadow 0 0 2px #000
