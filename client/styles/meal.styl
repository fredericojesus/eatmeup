@import colors

.meal-card
    width 300px
    height 275px

.meal-name
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 265px
    font-size 25px
    font-weight bold

.meal-description-calories
    flex 30%
    word-wrap break-word
    margin-top 10px
    display flex
    flex-direction column

.meal-calories
    display flex
    justify-content flex-end
    font-size 24px
    font-weight bold

.meal-vertical-divider
    position absolute
    width 2px
    height 50px
    top 7px
    background-color #fff

.meal-buttons-wrapper
    position relative
    flex 2
    display flex
    justify-content space-around
    div:first-child
    div:last-child
        display flex
        justify-content center
        width 100%
        background-color #ff9800

.meal.ng-enter
    transition 0.5s linear all
    opacity 0

.meal.ng-enter.ng-enter-active
    opacity 1

.meal.ng-leave
    animation 0.5s list_animation

list_animation_from()
    opacity 1

list_animation_to()
    opacity 0

@keyframes list_animation
    from
        list_animation_from()
    to
        list_animation_to()
